@model LoginModel
@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    ViewData["BaseUrl"] = $"{this.Request.Scheme}://{this.Request.Host}{this.Request.PathBase}";
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-md-4">
        <section>

            <form class="form-signin" id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control form-styling" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control form-styling" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>



                <input type="checkbox" asp-for="Input.RememberMe" id="checkbox" />
                <label for="checkbox" asp-for="Input.RememberMe">
                    <span class="ui">
                    </span>@Html.DisplayNameFor(m => m.Input.RememberMe)

                </label>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
                <button type="submit" class="btn-signin btn-primary">Log in</button>
                
            </form>



