@model VoterListApp.Models.Citizen

@{
    ViewData["Title"] = "CreateEdit";
}

<h1>  Voter Info</h1>


<div class="container">
    <div class="col-lg-6 offset-3">
        <form method="Post" />

        @if (Model != null)
        {
            <input type="hidden" asp-for="id">
        }
        <div class="form-row">
            <label asp-for="@Model.Name">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Name" class="text-danger "></span>
        </div>

        <div class="form-row">
            <label asp-for="Address">Address</label>
            <input asp-for="@Model.Address" type="text" class="form-control">
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="@Model.Age">Age</label>
            <input asp-for="@Model.Age"  class="form-control">
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>


        <div class="form-row">

            <label asp-for="@Model.fatherName">Father's Name</label>
            <input asp-for="@Model.fatherName" type="text" class="form-control">
            <span asp-validation-for="@Model.fatherName" class="text-danger"></span>
        </div>



        <label asp-for="@Model.Sex">Gender</label>
        <input type="radio" asp-for="@Model.Sex" value="male"> Male
        <input type="radio" asp-for="@Model.Sex" value="female"> Female
    </div>

        <div class="row">
            <input type="submit" class="btn btn-primary col-3 offset-3">
            <a asp-action="Index" class="btn btn-danger text-white col-3 offset-1"> Cancel</a>
        </div>

        <form />
    </div>

<div />
