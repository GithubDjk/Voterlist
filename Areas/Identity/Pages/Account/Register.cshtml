@page
@model RegisterModel
@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4">
        <section>
            <form class="form-signup" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="Input.Email" class="col-form-label"></label>
                <input asp-for="Input.Email" class="form-styling" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <label asp-for="Input.Password" class="col-form-label"></label>
                <input asp-for="Input.Password" class="form-styling" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-styling" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>



                <button type="submit" class="btn btn-signup">Register</button>
                  </form>



        </section>
    </div>
</div>








